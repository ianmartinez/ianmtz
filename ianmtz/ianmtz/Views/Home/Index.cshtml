@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: url('../img/Background.jpg') no-repeat center center scroll;
        background-size: cover;
    }
</style>

<div class="jumbotron windowOuter windowOuterBlurred">
    <div class="windowInner">
        <div class="portraitContainer">
            <img src="~/img/Portrait.jpg" />
        </div>

        <div class="jumboDescription">
            <h1>Ian Martinez</h1>

            <p>
                A software developer and designer with projects in C#, Java, JavaScript, Pascal, and more.
            </p>

            <div class="appButtons">
                <a class="btn btn-primary imageButton" href="~/About" role="button">
                    <ion-icon name="help-circle"></ion-icon>
                    <span>About</span>
                </a>

                <a class="btn btn-primary imageButton" href="https://github.com/ianmartinez/" role="button">
                    <ion-icon name="logo-github"></ion-icon>
                    <span>GitHub</span>
                </a>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_Projects.cshtml")