@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Taiga Icons";
}

@section description {
    <p class="appDescriptionText">
        A fork of <a href="https://github.com/elementary/icons">elementary icons</a>,
        designed to be easy to use in desktop application projects.
    </p>

    <div class="appButtons">
        <a class="btn btn-primary imageButton" href="https://github.com/ianmartinez/taiga-icons" role="button">
            <ion-icon name="logo-github"></ion-icon><span>GitHub</span>
        </a>
    </div>
}

@section screenshot {
    <img class="featurette-image appScreenshot" src="~/img/Icons/Taiga/Icons.jpg" lightbox />
}

<div class="container appFeatures">
    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">Rasters in multiple sizes</h2>

            <div class="featuretteDescription">
                <p class="lead">
                    Comes with pre-rendered PNG files that you can add to your application.
                </p>

                <p class="extendedDescription">
                    The sizes are 16x16, 24x24, 32x32, 48x48, 64x64, 96x96, and 128x128.
                </p>
            </div>
        </div>

        <div class="col-md-5">
            <div class="imgContainer">
                <img class="featurette-image" src="~/img/Icons/Taiga/Rasters.jpg" lightbox />
            </div>
        </div>
    </div>

    <hr class="featurette-divider">

    <div class="row featurette orderFlip">
        <div class="col-md-7">
            <h2 class="featurette-heading">Looks good everywhere</h2>

            <div class="featuretteDescription">
                <p class="lead">
                    Holds up in both dark mode and light mode, without adjustment.
                </p>
            </div>
        </div>

        <div class="col-md-5">
            <div class="imgContainer">
                <img class="featurette-image" src="~/img/Icons/Taiga/Demo.jpg" lightbox />
            </div>
        </div>
    </div>
</div>