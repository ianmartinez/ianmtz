@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Cardinal QEMU";
}

@section icon {
    <img src="~/img/CardinalQemu/Icon.png" />
}

@section description {
    <div class="appWarning appWarningWip">
        <ion-icon name="construct"></ion-icon>
        <div>
            <strong>Under Development</strong>
            <span>Some features may be incomplete or contain bugs</span>
        </div>
    </div>

    <p class="appDescriptionText">
        An easy-to-use, cross-platform frontend for <a href="https://www.qemu.org/">QEMU</a>.
    </p>

    <div class="appDescriptionExtended">
        <p><strong>Requirements:</strong> .NET Core 3.0 or higher</p>
        <p><strong>Written In:</strong> C#</p>
    </div>

    <div class="appButtons">
        <a class="btn btn-primary imageButton" href="https://github.com/ianmartinez/cardinal-qemu" role="button">
            <ion-icon name="logo-github"></ion-icon><span>GitHub</span>
        </a>
    </div>
}

@section screenshot {
    <img class="featurette-image appScreenshot" src="~/img/CardinalQemu/Screenshot.jpg" lightbox />
}

<div class="container appFeatures">
    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">All your machines in one place</h2>

            <div class="featuretteDescription">
                <p class="lead">
                    Manage your machines with ease.
                </p>

                <p class="extendedDescription">
                    All of your QEMU machines are organized in a single list, with stats about each machine. 
                </p>
            </div>
        </div>

        <div class="col-md-5">
            <div class="imgContainer">
                <img class="featurette-image" src="~/img/CardinalQemu/Info.jpg" lightbox />
            </div>
        </div>
    </div>

    <hr class="featurette-divider">

     <div class="row featurette orderFlip">
        <div class="col-md-7">
            <h2 class="featurette-heading">Emulate different systems</h2>

            <div class="featuretteDescription">
                <p class="lead">
                    All sorts of systems, from old to modern, can be emulated.
                </p>

                <p class="extendedDescription">
                    This includes <strong>x86</strong>, <strong>x64</strong>, <strong>PPC</strong>,
                    and <strong>ARM</strong>.
                </p>
            </div>
        </div>

        <div class="col-md-5">
            <div class="imgContainer">
                <img class="featurette-image" src="~/img/CardinalQemu/Machines.jpg" lightbox />
            </div>
        </div>
    </div>
    
    <hr class="featurette-divider">

     <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">Emulate different systems</h2>

            <div class="featuretteDescription">
                <p class="lead">
                    All sorts of systems, from old to modern, can be emulated.
                </p>

                <p class="extendedDescription">
                    When creating a new machine, Cardinal QEMU will automatically 
                    find the best configuration to boot a given system.
                </p>
            </div>
        </div>

        <div class="col-md-5">
            <div class="imgContainer">
                <img class="featurette-image" src="~/img/CardinalQemu/NewMachine.jpg" lightbox />
                <img class="featurette-image" src="~/img/CardinalQemu/MachineXml.jpg" lightbox />
            </div>
        </div>
    </div>
</div>