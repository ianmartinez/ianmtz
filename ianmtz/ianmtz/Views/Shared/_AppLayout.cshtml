@{
    Layout = "_Layout";
}

<div class="jumbotron windowOuter">
    <div class="windowInner appJumbo">
        <div class="appIcon">
            @RenderSection("icon")
        </div>

        <div class="appDescription">
            <h1>@ViewData["Title"]</h1>
            <p>
                @RenderSection("description")
            </p>
            <p>
                <a class="btn btn-primary" href="~/About" role="button">More &raquo;</a>
            </p>
        </div>
    </div>
</div>

<div class="windowOuter">
    <div class="windowInner">
        @RenderBody()
    </div>
</div>