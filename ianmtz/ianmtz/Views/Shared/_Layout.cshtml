<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ian Martinez</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhaina+2:wght@400;800&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded">
            <a class="navbar-brand" href="/">Ian <span class="bold">Martinez</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navber" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="appsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Apps</a>
                        <div class="dropdown-menu" aria-labelledby="appsDropdown">
                            <a class="dropdown-item" href="#">ASCII Studio</a>
                            <a class="dropdown-item" href="#">Chameleon</a>
                            <a class="dropdown-item" href="#">Cardinal QEMU</a>
                            <a class="dropdown-item" href="#">Language Pad</a>
                            <a class="dropdown-item" href="#">Thorn Writer</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="jsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">JS</a>
                        <div class="dropdown-menu" aria-labelledby="jsDropdown">
                            <a class="dropdown-item" href="#">Tamarack</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="resourcesDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Resources</a>
                        <div class="dropdown-menu" aria-labelledby="resourcesDropdown">
                            <a class="dropdown-item" href="~/Resources/AeroLib">AeroLib</a>
                            <a class="dropdown-item" href="~/Resources/TaigaIcons">Taiga Icons</a>
                            <a class="dropdown-item" href="~/Resources/TellIcons">Tell Icons</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="screensaversDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Screensavers</a>
                        <div class="dropdown-menu" aria-labelledby="screensaversDropdown">
                            <a class="dropdown-item" href="#">Summer Rain (macOS)</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Graystyle (Windows)</a>
                            <a class="dropdown-item" href="#">Colors (Windows)</a>
                        </div>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="themesDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Themes</a>
                        <div class="dropdown-menu" aria-labelledby="themesDropdown">
                            <a class="dropdown-item" href="~/Themes/Nightfall">Nightfall (IceWM)</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main">
           @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Ian Martinez
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
